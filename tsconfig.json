{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es6","dom"],
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": [ "./*" ]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude":[
    "./test/**/*.spec.ts",
    "./node_modules"
  ]
}
